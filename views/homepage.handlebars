{{#each posts as |post|}}
<div class="card flex">
  <h3 class="card-header flex-row justify-space-between">
    <a href="/post/{{id}}" target="_blank">{{title}}</a> 
    <span>Posted by {{user.username}} on {{created_at}}</span></h3>
    <div class="card-body">
      <p>{{post_body}}</p>
    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</div>
{{/each}}