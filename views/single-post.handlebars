<div class="card flex">
    <h3 class="card-header flex-row justify-space-between">
        {{post.title}}
        <span>Posted by {{post.user.username}} on {{post.created_at}}</span></h3>
    <div class="card-body">
        <p>{{post.post_body}}</p>
    </div>
</div>

{{#if loggedIn}}
<div class="card">
    <h3 class="card-header">Leave a Comment</h3>
    <div class="card-body">
        <form class="comment-form">
            <div>
                <textarea name="comment-body" class="form-textarea"></textarea>
            </div>

            <div>
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>
</div>
{{/if}}


<div class="card">
    <h3 class="card-header">{{post.comments.length}} Comments</h3>
    <div class="card-body">
        {{#each post.comments}}
        <div class="meta">
            <strong>{{user.username}}</strong> on {{created_at}}
        </div>
        <div class="text">
            <span><q>{{comment_text}}</q></span>
        </div>
        {{/each}}
    </div>
</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}